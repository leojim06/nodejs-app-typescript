{
    "compilerOptions": {
        "lib": [
            "ES2018"
        ],
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts",
        "index.js",
        "config/*.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}